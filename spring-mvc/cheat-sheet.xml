<!-- ****************************** -->
<!-- ***** SET UP SPRING MVC ****** -->

<!-- in web.xml -->

<!-- Spring MVC Servlet -->
<servlet>
	<servlet-name>hr</servlet-name>
	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>hr</servlet-name>
	<url-pattern>/</url-pattern>
</servlet-mapping>

<!-- Load additional Spring contexts -->
<context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>
		classpath:application-config.xml
		<!-- WEB-INF/hr-security.xml -->
	</param-value>
</context-param>
<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

<!-- In Spring servlet context -->
<!-- @Controller -->
<context:component-scan base-package="spring.web.controller" />


<!-- ****************************** -->
<!-- ****** Externalize config ******* -->

<!-- Load property file -->
<context:property-placeholder location="classpath:ws-config.properties"/>

<!-- ****************************** -->
<!-- ****** Spring Security ******* -->

<!-- in web.xml -->

<!-- Spring Security filter -->
<filter>
	<filter-name>springSecurityFilterChain</filter-name>
	<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
</filter>
<filter-mapping>
	<filter-name>springSecurityFilterChain</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping> 

